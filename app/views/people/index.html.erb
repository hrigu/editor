<div class="page-header">
  <h1> People
    <small>List of people</small>
  </h1>
</div>

<div class="table-responsive">

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>First name</th>
      <th>Family name</th>
      <th>Lawyer</th>
      <th>Contact persons</th>
      <th>created at</th>
      <th>updated at</th>
      <th colspan="3">actions</th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
        <tr>
          <td><%= person.first_name %></td>
          <td><%= person.family_name %></td>
          <td><%= person.lawyer %></td>
          <td><%= person.contact_persons %></td>
          <td><%= person.created_at.localtime.to_formatted_s(:short)  %></td>
          <td><%= person.updated_at.localtime.to_formatted_s(:short)  %></td>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to new_person_path, class: "btn btn-primary", role: "button" do %>
    <i class="glyphicon glyphicon-plus"></i> New Person
<% end %>

